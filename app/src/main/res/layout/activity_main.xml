<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9ca98"
    tools:context=".MainActivity">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="305dp"
        android:layout_height="220dp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mariachi"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="249dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="22dp"
        android:autoSizeTextType="none"
        android:text="BIENVENID@S"
        android:textAllCaps="true"
        android:textColor="#CC0000"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="BIENVENID@S" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="69dp"
        android:background="@drawable/imagen1"
        app:srcCompat="@drawable/imagen1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="79dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="113dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/imagen1"
        app:srcCompat="@drawable/imagen1" />

    <Button
        android:id="@+id/btnUsuario"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnManager"
        android:layout_marginEnd="23dp"
        android:background="@android:color/transparent"
        android:onClick="btnUsuario"
        android:text="USUARIO"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnManager"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="60dp"
        android:background="@android:color/transparent"
        android:onClick="btnManager"
        android:text="MANAGER"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:text="NOCHIS BAND'S"
        android:textColor="#CC0000"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

</RelativeLayout>