<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f6b26b"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="129dp"
            android:layout_height="121dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="116dp"
            android:layout_marginStart="54dp"
            app:srcCompat="@drawable/usuarios" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="126dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignEnd="@+id/textView2"
            app:srcCompat="@drawable/usuarios" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="299dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="40dp"
            android:text="BIENVENID@S"
            android:textAllCaps="true"
            android:textColor="@android:color/background_dark"
            android:textSize="36sp"
            android:textStyle="bold"
            android:autoSizeTextType="none"
            tools:text="BIENVENID@S" />

        <Button
            android:id="@+id/btnManager"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="59dp"
            android:background="@android:color/transparent"
            android:onClick="btnManager"
            android:text="MANAGER"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUsuario"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnManager"
            android:layout_marginEnd="41dp"
            android:background="@android:color/transparent"
            android:onClick="btnUsuario"
            android:text="USUARIO"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="48dp"
            android:text="NOCHIS BAND'S"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="188dp"
            android:layout_height="168dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="152dp"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

    </RelativeLayout>
</RelativeLayout>