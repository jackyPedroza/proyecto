<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sii"
    tools:context=".PagPrincipalManager">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="327dp"
        android:layout_height="187dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        app:srcCompat="@drawable/bnx" />

    <Button
        android:id="@+id/btnRGrupo"
        android:layout_width="340dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="239dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="btnRGrupo"
        android:text="Registrar Grupo"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRevento"
        android:layout_width="345dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="171dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="btnRevento"
        android:text="Registrar Evento"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnagenda"
        android:layout_width="95dp"
        android:layout_height="110dp"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="btnagenda"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/agenda" />

    <Button
        android:id="@+id/btneliminar"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="btnEliminar"
        android:text="ELIMINAR GRUPO"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEE"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="btnEE"
        android:text="ELIMINAR EVENTO"
        android:textStyle="bold" />

</RelativeLayout>